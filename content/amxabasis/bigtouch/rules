#!/bin/sh

set -eu

command=$1
upstream_dir=$2

cd "${upstream_dir}"



PFAD="usr/share/gnome-shell/extensions"

case "${command}" in
  configure)
    ln -fns ./setup-gnome-touch.sh /etc/profile.d/setup-gnome-touch.sh
    test -d /$PFAD/bigtouch-ux@puavo.org && rm -rf /$PFAD/bigtouch-ux@puavo.org 
    ln -fns ./bigtouch-ux@puavo.org /$PFAD/bigtouch-ux@puavo.org 
    ;;
	
  unconfigure)
      rm -f /etc/profile.d/setup-gnome-touch.sh
      rm -f /$PFAD/bigtouch-ux@puavo.org 
    ;;
    
  *)
    ;;
esac
