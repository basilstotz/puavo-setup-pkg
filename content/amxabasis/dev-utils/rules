#!/bin/sh

set -eu

command=$1
shift



case "${command}" in
  configure)
      upstream_dir=$1
      dpkg-deb -x ${upstream_dir}/puavo-image-utils_*_all.deb ${upstream_dir} 
      for b in ${upstream_dir}/usr/sbin/*;do
	  ln -fns $b /usr/local/sbin/$(basename $b)
      done
      ln -fns ${upstream_dir}/puavo-pkg-tool /usr/local/sbin/puavo-pkg-tool
    ;;
	
  unconfigure)
      upstream_dir=$1
      for b in ${upstream_dir}/usr/sbin/*;do
	  rm -f /usr/local/sbin/$(basename $b)
      done
      rm -f /usr/local/sbin/puavo-pkg-tool
    ;;
    
  *)
    ;;
esac
